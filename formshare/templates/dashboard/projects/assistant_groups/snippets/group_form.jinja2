{% block group_form %}
    <form class="m-t require_busy" role="form" method="post" action="{{ request.url }}" enctype="multipart/form-data" >
        {{ form.secure_form(request) }}
        <div class="hr-line-dashed"></div>
        <div class="form-group row"><label class="col-sm-2 col-form-label">{{ _('Description') }}</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="group_desc" value="{{ groupData.group_desc }}">
            </div>
        </div>
        <div class="hr-line-dashed"></div>
        {% block group_form_controls_extra %}

        {% endblock group_form_controls_extra %}
        {% block assistant_form_actions %}
            <div class="form-group row">
                <div class="col-sm-4 col-sm-offset-2">
                    <button class="btn btn-primary btn-sm" type="submit">{{ _('Add group') }}</button>
                </div>
            </div>
        {% endblock assistant_form_actions %}
    </form>
{% endblock group_form %}